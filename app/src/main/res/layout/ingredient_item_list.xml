<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_ingredient_list_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/ingredient_list_padding_start_left"
        android:paddingStart="@dimen/ingredient_list_padding_start_left"
        android:paddingTop="@dimen/ingredient_list_bullet_padding"
        app:srcCompat="@drawable/ic_radio_button_checked_white_5dp" />

    <TextView
        android:id="@+id/textView_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/ingredient_list_padding_bottom"
        android:paddingLeft="@dimen/ingredient_list_padding_start_left"
        android:paddingStart="@dimen/ingredient_list_padding_start_left"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white" />


</LinearLayout>