<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardView_step_margin"
    app:cardCornerRadius="@dimen/carView_steps_corner_rad">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/list_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_steps_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="@string/hint_steps_short" />

            <TextView
                android:id="@+id/textView_steps_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="@string/hint_steps_long"
                android:inputType="text"
                android:maxLines="2"
                android:text="@string/hint_steps_long" />

        </LinearLayout>


        <!--TODO add description-->
        <ImageButton
            android:id="@+id/imageButton_steps_clip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_play_arrow_white_24dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>

